# OR IN CONNECTION WITH THE USE OR PERFORMANCE OF THIS SOFTWARE.

set -e
exec > config.h 2> config.log

CFLAGS="${CFLAGS} -Wno-unused -Werror"

runtest() {
	echo ${CC} ${CFLAGS} -o test-${1} test-${1}.c 1>&2
	${CC} ${CFLAGS} -o "test-${1}" "test-${1}.c" $3 1>&2 || return 0
	"./test-${1}" && echo "#define HAVE_${2}" \
		|| echo FAILURE: test-${1} returned $? 1>&2
	rm "test-${1}"
}

cat config.h.pre
runtest strlcat STRLCAT ""
runtest strlcpy STRLCPY ""
runtest strtonum STRTONUM ""
runtest memmem MEMMEM ""
runtest reallocarray REALLOCARRAY ""
runtest sandbox_init SANDBOX_INIT ""
runtest systrace SYSTRACE ""
runtest zlib ZLIB "-lz"
runtest capsicum CAPSICUM ""
runtest seccomp-filter SECCOMP_FILTER ""
arch=`uname -m 2>/dev/null || echo unknown`
case "$arch" in
x86_64)
	echo "#define SECCOMP_AUDIT_ARCH AUDIT_ARCH_X86_64"
	;;
i*86)
	echo "#define SECCOMP_AUDIT_ARCH AUDIT_ARCH_I386"
	;;
arm*)
	echo "#define SECCOMP_AUDIT_ARCH AUDIT_ARCH_ARM"
	;;
esac
cat config.h.post

exit 0
